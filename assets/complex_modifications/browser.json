              "bundle_identifiers": [
                "^com\\.vivaldi\\.Vivaldi$"
              ]
            }
          ],
          "from": {
            "key_code": "page_up",
            "modifiers": {
              "mandatory": [
                "command"
              ],
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "key_code": "[",
              "modifiers": [
                "command",
                "shift"
              ]
            }
          ]
        }
      ]
    },
