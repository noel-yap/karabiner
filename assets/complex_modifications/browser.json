{
  "title": "Browser-related mappings",
  "rules": [
    {
      "description": "Cmd+PgUp ↦ Ctrl+PgUp: Move to previous tab",
      "manipulators": [
        {
          "type": "basic",
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^ai\\.perplexity\\.comet$",
                "^com\\.google\\.Chrome$",
                "^org\\.torproject\\.torbrowser$"
              ]
            }
          ],
          "from": {
            "key_code": "page_up",
            "modifiers": {
              "mandatory": [
                "command"
              ],
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "key_code": "page_up",
              "modifiers": [
                "control"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Cmd+PgUp ↦ Ctrl+PgUp: Move to previous tab",
