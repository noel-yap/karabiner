{
  "title": "Exit-related mappings",
  "rules": [
    {
      "description": "Cmd+Opt+Delete to Ctrl+Cmd+Opt+Eject: Shutdown",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "delete_forward",
            "modifiers": {
              "mandatory": [
                "command",
                "option"
              ],
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "key_code": "eject",
              "modifiers": [
                "control",
                "command",
                "option"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Cmd+Opt+Insert to Ctrl+Cmd+q: Lock screen",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "insert",
            "modifiers": {
              "mandatory": [
                "command",
                "option"
              ],
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "key_code": "q",
              "modifiers": [
                "control",
                "command"
              ]
            }
          ]
        }
      ]
    }
  ]
}