{
  "title": "Paragraph-related mappings",
  "rules": [
    {
      "description": "Cmd+Up to Opt+Up",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "up_arrow",
            "modifiers": {
              "mandatory": [
                "command"
              ],
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "key_code": "up_arrow",
              "modifiers": [
                "option"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Shift+Cmd+Up to Shift+Opt+Up",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "up_arrow",
            "modifiers": {
              "mandatory": [
                "shift",
                "command"
              ],
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "key_code": "up_arrow",
              "modifiers": [
                "shift",
                "option"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Cmd+Down to Opt+Down",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "down_arrow",
            "modifiers": {
              "mandatory": [
                "command"
              ],
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "key_code": "down_arrow",
              "modifiers": [
                "option"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Shift+Cmd+Down to Shift+Opt+Down",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "down_arrow",
            "modifiers": {
              "mandatory": [
                "shift",
                "command"
              ],
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "key_code": "down_arrow",
              "modifiers": [
                "shift",
                "option"
              ]
            }
          ]
        }
      ]
    }
  ]
}