{
  "title": "Window-related mappings",
  "rules": [
    {
      "description": "Ctrl+PgUp ↦ Shift+Cmd+`: Move to previous window",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "page_up",
            "modifiers": {
              "mandatory": [
                "control"
              ],
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "key_code": "grave_accent_and_tilde",
              "modifiers": [
                "shift",
                "command"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Ctrl+PgDn ↦ Cmd+`: Move to next window",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "page_down",
            "modifiers": {
              "mandatory": [
                "control"
              ],
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "key_code": "grave_accent_and_tilde",
              "modifiers": [
                "command"
              ]
            }
          ]
        }
      ]
    }
  ]
}