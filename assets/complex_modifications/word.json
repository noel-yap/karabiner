{
  "title": "Word-related mappings",
  "rules": [
    {
      "description": "Ctrl+Backspace deletes word left",
      "manipulators": [
        {
          "from": {
            "key_code": "delete_or_backspace",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
          "to": [
            {
              "key_code": "delete_or_backspace",
              "modifiers": ["option"]
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Ctrl+Delete deletes word right",
      "manipulators": [
        {
          "from": {
            "key_code": "delete_forward",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
          "to": [
            {
              "key_code": "delete_or_backspace",
              "modifiers": ["option", "fn"]
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}